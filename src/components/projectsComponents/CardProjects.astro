---
import ButtonProjects from "./ButtonProjects.astro";
const {image, title, description, tags, link, github} = Astro.props;

import {Icon} from "astro-icon/components";
---

<div class="flex justify-center">
    <div
            class="w-full bg-latte-mantle dark:bg-mocha-mantle p-5 sm:p-8 md:p-4 lg:p-3 rounded-2xl"
    >
        <img
                alt={title}
                class="rounded-2xl my-auto mx-auto w-full md:w-full lg:w-full"
                src={image}
        />
        <div class="flex flex-col items-center text-center">
            <h1
                    class="text-[19px] xss:text-[20px] xs:text-[22px] sm:text-[24px] md:text-[30px] font-bold text-latte-text dark:text-mocha-text mt-6 mb-2"
            >
                {title}
            </h1>
            <ul class="flex flex-row mb-1 justify-center gap-x-2">
                {
                    tags.map((tag) => (
                            <li>
                            <span
                                    class={`flex text-latte-base dark:text-mocha-base gap-x-2 rounded-full text-[12px] ${tag.color} p-2 `}
                                    title={tag.name}
                            >
                                <Icon
                                        name={tag.icon}
                                        class="size-[18px]"
                                />
                            </span>
                            </li>
                    ))
                }
            </ul>
            <p
                    class="mt-5 text-[13px] xss:text-[14px] xs:text-[14px] sm:text-base text-latte-subtext1 dark:text-mocha-subtext1 text-pretty"
            >
                {description}
            </p>
            <div class="flex justify-center items-end mt-5">
                <div class="flex justify-center gap-x-4">
                    {
                        github &&
                            <ButtonProjects link={github}>
                                Github
                            </ButtonProjects>

                    }
                    {
                        link &&
                            <ButtonProjects link={link}>
                                Preview
                            </ButtonProjects>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
