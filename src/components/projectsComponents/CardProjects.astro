---
import ButtonProjects from "./ButtonProjects.astro";
import { Icon } from "astro-icon/components";

const { image, title, description, tags, link, github } = Astro.props;
---

<div class="flex justify-center">
    <div
        class="w-full bg-oldworld-gray2 p-5 sm:p-8 md:p-4 lg:p-3 rounded-2xl flex flex-col"
    >
        <img alt={title} class="rounded-2xl mx-auto w-full" src={image} />

        <div class="flex flex-col grow items-center text-center mt-6">
            <h1
                class="text-[19px] xss:text-[20px] xs:text-[22px] sm:text-[24px] md:text-[30px] font-bold text-oldworld-fg mb-4"
            >
                {title}
            </h1>

            <ul class="flex flex-row justify-center gap-x-2 mb-4">
                {
                    tags.map((tag) => (
                        <li>
                            <span
                                class={`flex text-oldworld-bg gap-x-2 rounded-full text-[12px] ${tag.color} p-2`}
                                title={tag.name}
                            >
                                <Icon name={tag.icon} class="size-[18px]" />
                            </span>
                        </li>
                    ))
                }
            </ul>

            <p
                class="text-[13px] xss:text-[14px] text-pretty sm:text-base text-oldworld-subtext1"
            >
                {description}
            </p>

            <div class="mt-auto flex justify-center gap-x-4 pt-5">
                {
                    github && (
                        <ButtonProjects
                            link={github}
                            class="min-w-[100px] text-center"
                        >
                            Github
                        </ButtonProjects>
                    )
                }
                {
                    link && (
                        <ButtonProjects
                            link={link}
                            class="min-w-[100px] text-center"
                        >
                            Preview
                        </ButtonProjects>
                    )
                }
            </div>
        </div>
    </div>
</div>
