---
import {Icon} from "astro-icon/components";

const {url, icon, label} = Astro.props;
---

<a
        target="_blank"
        href={url}
        aria-label={label}
        rel="noopener noreferrer"
        class="m-auto size-10 hover:scale-105 transition duration-150 xs:size-11 rounded-xl flex justify-center text-latte-text dark:text-mocha-text items-center bg-latte-surface0 dark:bg-mocha-surface0"
>
    <Icon name={icon} class="size-5"/>
</a>
