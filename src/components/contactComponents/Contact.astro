---
import TitleSection from "../TitleSection.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { Icon } from "astro-icon/components";

const lang = getLangFromUrl(Astro.url);
const inSpanish = lang === "es";

const t = useTranslations(getLangFromUrl(Astro.url));
---

<div class="flex flex-col justify-center items-center mx-7 xl:mx-0">
    <TitleSection color={"cyan"}>{t("title.contact")}</TitleSection>
    <p
        class="w-full sm:w-[40ch] text-center text-oldworld-subtext1 font-medium text-[14px] xs:text-[15px] sm:text-[17px] md:text-[19px]"
    >
        {t("contact.description")}
    </p>
    <a class="flex justify-center mt-10 mb-2" href="mailto:dgox16@gmail.com">
        <button
            type="button"
            class="w-64 xs:w-72 md:w-96 p-4 md:p-8 text-oldworld-bg flex items-center justify-center font-display font-bold rounded-xl h-12 bg-oldworld-cyan hover:scale-105 transition duration-150"
        >
            <Icon
                name="email"
                class="mr-3 md:size-10 min-[350px]:size-[30px] size-5"
            />
            <p class="text-[17px] xs:text-[18px] md:text-[22px]">
                {inSpanish ? "Vamos a hablar!" : "Let's Talk!"}
            </p>
        </button>
    </a>
    <a
        href="https://wa.me/524451312061"
        class="text-oldworld-cyan font-semibold mb-10 hover:brightness-125 text-[13px] xs:text-[14px] sm:text-[15px] md:text-[17px]"
    >
        {
            inSpanish
                ? "O cont√°ctame por WhatsApp."
                : "Or contact me via WhatsApp."
        }
    </a>
</div>
